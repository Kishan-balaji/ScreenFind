<Window x:Class="ScreenTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Width="{x:Static SystemParameters.PrimaryScreenWidth}"  
        Height="{x:Static SystemParameters.PrimaryScreenHeight}"  
        Title="MainWindow">
    <Grid>
        <Button Content="Move to Largest Monitor" Click="btnMoveLargest_Click" 
                Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="200,0,0,0"/>
        <Button Content="Move to Smallest Monitor" Click="btnMoveSmallest_Click" 
                Width="200" Height="50" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,400,0"/>
    </Grid>
</Window>
